<co.pford.presenter.customviews.BRRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                                        android:id="@+id/layout"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:background="@drawable/backgroundflat"
                                                        android:filterTouchesWhenObscured="true"
                                                        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/linearLayout"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="@dimen/bread_margin"
                android:background="@drawable/ic_close_yellow_24dp" />

            <co.pford.presenter.customviews.BRText
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/SecurityCenter.title"
                android:textColor="@color/white"
                android:textSize="@dimen/header"
                app:customTFont="Electrolize-Regular.ttf" />

            <ImageButton
                android:id="@+id/faq_button"
                android:layout_width="@dimen/faq_dimen"
                android:layout_height="@dimen/faq_dimen"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/bread_margin"
                android:background="@drawable/ic_faq" />


        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/coin" />

    </LinearLayout>

    <co.pford.presenter.customviews.BRText
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="@dimen/bread_margin"
        android:layout_marginBottom="@dimen/bread_margin"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/SecurityCenter.info"
        android:textColor="@color/white"
        android:textSize="@dimen/sub_header" />

    <ListView
        android:id="@+id/menu_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_margin="@dimen/bread_margin"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:divider="#65696E"
        android:dividerHeight="1dp">

    </ListView>

</co.pford.presenter.customviews.BRRelativeLayout>